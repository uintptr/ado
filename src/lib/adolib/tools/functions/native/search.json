[
    {
        "name": "search",
        "description": "Perform a web search.",
        "inputSchema": {
            "type": "object",
            "properties": {
                "query": {
                    "type": "string",
                    "description": "Search query."
                },
                "num_results": {
                    "type": "integer",
                    "description": "Number of results (default: 10).",
                    "minimum": 1,
                    "maximum": 100,
                    "default": 10
                },
                "search_type": {
                    "type": "string",
                    "description": "Type of search.",
                    "enum": ["web", "images", "news", "videos"],
                    "default": "web"
                }
            },
            "required": ["query"],
            "additionalProperties": false
        }
    }
]
