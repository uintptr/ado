[
    {
        "name": "whois_query",
        "description": "Look up domain WHOIS information.",
        "inputSchema": {
            "type": "object",
            "properties": {
                "domain_name": {
                    "type": "string",
                    "description": "Domain to query (e.g., 'example.com').",
                    "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9\\-]{0,61}[a-zA-Z0-9])?\\.[a-zA-Z]{2,}$"
                },
                "query_type": {
                    "type": "string",
                    "description": "Query type.",
                    "enum": ["full", "summary", "availability"],
                    "default": "full"
                }
            },
            "required": ["domain_name"],
            "additionalProperties": false
        }
    }
]
